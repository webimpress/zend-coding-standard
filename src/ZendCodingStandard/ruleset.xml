<?xml version="1.0"?>
<ruleset name="ZendCodingStandard">
    <description>Zend Framework Coding Standard</description>

    <!-- display progress -->
    <arg value="p"/>
    <arg name="colors"/>
    <file>Sniffs/Files/COPYING.md</file>
    <file>Sniffs/Files/LICENSE.md</file>

    <!-- Exclude test assets -->
    <!--exclude-pattern>*/TestAsset/*</exclude-pattern-->

    <!-- inherit rules from: -->
    <rule ref="PSR2"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>
    <rule ref="Generic.Formatting.SpaceAfterNot"/>
    <rule ref="Squiz.WhiteSpace.OperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true"/>
        </properties>
    </rule>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <!-- ZendCodingStandard rules -->
    <rule ref="ZendCodingStandard.Files.Copying"/>
    <rule ref="ZendCodingStandard.Files.License"/>
    <rule ref="ZendCodingStandard.Commenting.FileLevelDocBlock"/>
</ruleset>
